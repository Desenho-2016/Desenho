<%= form_for @discipline, :html => { :class => "form-horizontal discipline" } do |f| %>

  <% if @discipline.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@discipline.errors.count, "error") %> prohibited this discipline from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @discipline.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :amount_credits, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :amount_credits, :class => 'form-control' %>
    </div>
    <%=f.error_span(:amount_credits) %>
  </div>
  <div class="form-group">
    <%= f.label :teacher_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :teacher_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:teacher_id) %>
  </div>
  <div class="form-group">
    <%= f.label :period_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :period_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:period_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                disciplines_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
