<div class="authform">
    <%= form_for( :session, url: sign_in_path, :html => { :role => 'form'}) do |f| %>
    <h3 class="text-center" id="text-login">Entrar</h3>
    <div class="form-group">
        <%= link_to 'Cadastre-se', new_user_path, class: 'right'  %>
        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :senha %>
        <%= f.password_field :password, :autofocus => true, class: 'form-control' %>
    </div>
    <%= f.submit 'Sign in', :class => 'btn btn-primary btn-block' %>
    <% end -%>
</div>
