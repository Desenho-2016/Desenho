<%- model_class = Teacher -%>
<div class="page-header">
  <h1><%=t '.title', :default => @teacher.name%></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @teacher.name %></dd>
</dl>
<div class="buttons">
<%= link_to t('.back', :default => t("Voltar")),
              teachers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("Editar")),
              edit_teacher_path(@teacher), :class => 'btn btn-primary' %>
<%= link_to t('.destroy', :default => t("Deletar")),
              teacher_path(@teacher),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Confirmar deleção de Professor?')) },
              :class => 'btn btn-danger' %>
</div>
