<form accept-charset="UTF-8" action="/discipline" class="new_comment" id="new_comment" method="post">
  <div class="modal-dialog" id="myModalLabel">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3>Novo Comentário</h3>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <input class="form-control" id="comentario" name="comment[body]" type="text_field">
          <input class="form-control" id="modal_value" type="hidden" name="modal" value="true">
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>
        <%= button_to "Comentar", {:controller=> "disciplines", :action => "create_comment_discipline", :user_id=> session[:user_id] } , :method => :post, :class => "btn btn-primary" %>
      </div>
    </div>
  </div>
</form>

