<%- model_class = Discipline -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Créditos</th>
      <% if current_user.type_user == 'admin'%>
        <th>Ações</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @disciplines.each do |discipline| %>
      <tr>
        <td><%= link_to discipline.name, discipline_path(discipline)%></td>
        <td><%= discipline.amount_credits %></td>
        <% if current_user.type_user == 'admin'%>
          <td>
            <%= link_to t('.edit', :default => t("Editar")),
                        edit_discipline_path(discipline), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("Deletar")),
                        discipline_path(discipline),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.type_user == 'admin'%>
  <%= link_to t('.new', :default => t("Cadastrar Nova Disciplina")),
              new_discipline_path,
              :class => 'btn btn-primary' %>
<% end %>
