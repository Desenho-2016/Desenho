<%- model_class = Period -%>
<div class="page-header">
  <h1><%=t '.title', :default => 'Semestres' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= "Semestre" %></th>
      <th><%=t '.actions', :default => t("Ações") %></th>
    </tr>
  </thead>
  <tbody>
    <% @periods.each do |period| %>
      <tr>
        <td><%= link_to period.semester, period_path(period)  %></td>
        <td>
          <%= link_to t('.edit', :default => t("Editar")),
                      edit_period_path(period), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("Deletar")),
                      period_path(period),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Confirmar deleção do semestre?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("Novo Semestre")),
            new_period_path,
            :class => 'btn btn-primary' %>
