<%= form_for @period, :html => { :class => "form-horizontal col-lg-12" } do |f| %>

  <% if @period.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@period.errors.count, "error") %> prohibited this period from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @period.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :semester, :Semestre, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= select "period", "semester", ["1/2013", "2/2013", "1/2014", "2/2014", "1/2015", "2/2015", "1/2016"], { include_blank: true }, {:class => 'form-control'} %>
    </div>
    <%=f.error_span(:semester) %>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                periods_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
