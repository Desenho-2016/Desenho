        <% if logged_in? %>
            <li class="link"><%= link_to "Home", home_index_path, class: "navbar-brand"  %></li>
            <% if current_user.type_user == 'admin'%>
              <li class="link"><%= link_to "Users", users_path, class: "navbar-brand"  %></li>
